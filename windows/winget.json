{
    "$schema": "https://aka.ms/winget-settings.schema.json",

    "visual": {
        "progressBar": "accent"
    },
    "logging": {
        "level": "verbose"
    },
    "installPrefReq": {
        "scope": "user"
    },
    "installBehavior": {
        "disableInstallNotes": true
    },
    "UninstallBehavior": {
        "purgePortablePackage": true
    },
    "network": {
        "downloader": "do"
    },
    "experimentalFeatures": {
        "directMSI": true,
        "fonts": true,
        "resume": true
    }
}
